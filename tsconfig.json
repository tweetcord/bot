{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "dist",
        "lib": [
            "ES2020",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "ESNext.String",
            "DOM"
        ],
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules"
    ]
}